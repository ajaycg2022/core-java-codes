package arraypractice;

import java.util.Arrays;
import java.util.Scanner;

public class RemoveElement {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int[] arrayA = new int[5];
		System.out.println("enter the values of arrayA");

		for (int i = 0; i < arrayA.length; i++) {
			arrayA[i] = sc.nextInt();
			
			System.out.println("orignal array"+Arrays.toString(arrayA));
			
			int removeIndex=1;
			for(int j=removeIndex;i<arrayA.length-1;i++) {
				arrayA[j]=arrayA[j+1];
				
			}
			System.out.println("array after removing element"+Arrays.toString(arrayA));

		}

	}
}
