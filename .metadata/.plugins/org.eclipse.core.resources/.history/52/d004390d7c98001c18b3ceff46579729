package com.cg.oopsinjava.inheritance5;

public class Book extends Item {

	String bookName;
	int pages;
	String authorName;
	String genre;

	void readBookDetails() {
		System.out.println("enter Book Details");
		
		System.out.println("enter the Book name");
		bookName = sc.nextLine();
		System.out.println("enter the Author name");// Central board of film certification(CBFC)
		authorName = sc.nextLine();
		
		System.out.println("enter number of pages");
		pages = sc.nextInt();

		System.out.println("enter the genre");
		genre = sc.nextLine();

	}

	void printBookDetails() {
		System.out.println("Certificate name= ");//CBFC
		System.out.println("Entered detail of the Item is = ");
		System.out.println(" Duration = " + duration);

	}
}
